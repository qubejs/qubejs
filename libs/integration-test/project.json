{
  "name": "integration-test",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/integration-test/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/integration-test/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "copy-scss": {
      "command": "node tools/scripts/copy-scss.mjs libs/integration-test/src dist/libs/integration-test",
      "dependsOn": ["build"]
    },
    "build-scss": {
      "command": "node tools/scripts/build-scss.mjs libs/integration-test/src"
    },
    "build-imports": {
      "command": "node tools/scripts/build-imports.mjs libs/integration-test/src"
    },

    "dist": {
      "command": "node -v",
      "dependsOn": ["build-imports", "build-scss", "build", "copy-scss"]
    },

    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/integration-test",
        "tsConfig": "libs/integration-test/tsconfig.lib.json",
        "project": "libs/integration-test/package.json",
        "entryFile": "libs/integration-test/src/index.ts",
        "additionalEntryPoints": [
          "libs/integration-test/src/components.lazy.tsx",
          "libs/integration-test/src/advanced.tsx",
          "libs/integration-test/src/basic.tsx",
          "libs/integration-test/src/content.tsx",
          "libs/integration-test/src/data.tsx",
          "libs/integration-test/src/editing.tsx",
          "libs/integration-test/src/files.tsx",
          "libs/integration-test/src/theme.tsx",
          "libs/integration-test/src/visualization.tsx"
        ],
        "external": [
          "react",
          "react-dom",
          "react/jsx-runtime",
          "react-router-dom",
          "react-html-parser",
          "@qubejs/core",
          "d3"
        ],
        "rollupConfig": "libs/integration-test/rollup.config.js",
        "stylePreprocessorOptions": {
          "includePaths": ["libs/integration-test/src/styles"]
        },
        "compiler": "babel",
        "assets": [
          {
            "glob": "libs/integration-test/README.md",
            "input": ".",
            "output": "."
          },
          {
            "glob": "libs/integration-test/LICENCE",
            "input": ".",
            "output": "."
          }
        ],
        "extractCss": true
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs integration-test {args.ver} {args.tag}",
      "dependsOn": ["dist"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/integration-test/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  }
}
